---
import { getCollection } from "astro:content";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("experiments");
  return blogEntries.map((entry, ...rest) => {
    return {
      params: { slug: entry.slug },
      props: { entry },
    };
  });
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
import MDXLayout from "../../layouts/MDXLayout.astro";
---

<MDXLayout title={entry.data.title}>
  <div class="text-lime-50 text-4xl m-10">{entry.data.title}</div>
  <Content />
</MDXLayout>
